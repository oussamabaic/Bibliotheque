{% extends 'base2.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>Profile</h2>
                            <div class="page_link">
                                <a href="index.html">Home</a>
                                <a href="user/index.html.twig">Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="main main-raised" style="margin-top: -54px;">
        <div class="profile-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 ml-auto mr-auto">
                        {% for user in users %}
                            {% if  user.email == app.user.email %}
                                <div class="profile">
                                    <div class="avatar">
                                        <img alt="Circle Image" class="img-raised rounded-circle img-fluid" src="{{ asset('uploads/images/UsersImage/'~app.user.image) }}">
                                    </div>
                                    <div
                                        class="card-body p-3">

                                        <!--Body-->
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <i class="fa fa-user text-info"></i>
                                                    </div>
                                                </div>
                                                <input class="form-control" id="nombre" name="nombre" value="{{ app.user }}" disabled type="text">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <i class="fa fa-envelope text-info"></i>
                                                    </div>
                                                </div>
                                                <input class="form-control" id="nombre" name="email" value="{{ user.email }}" disabled type="email">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <i class="fa fa-venus-mars text-info"></i>
                                                    </div>
                                                </div>
                                                <input class="form-control" id="nombre" name="email" value="{{ user.sexe }}" disabled type="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <i class="fa fa-address-card text-info"></i>
                                                    </div>
                                                </div>
                                                <input class="form-control" id="nombre" name="email" value="{{ user.adresse }}" disabled type="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <i class="fa fa-phone text-info"></i>
                                                    </div>
                                                </div>
                                                <input class="form-control" id="nombre" name="email" value="{{ user.telephone }}" disabled type="email">
                                            </div>
                                        </div>

                                        <div class="text-center">
                                            <a href="{{ path('user_edit',{'id': user.id}) }}" class="btn btn-info btn-block rounded-0 py-2" type="button">Edit</a>
                                        </div>

                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br>
    <br>

{% endblock %}
