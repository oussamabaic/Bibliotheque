{% extends "baseBook.html.twig" %}


{% block body %}

    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>Elements</h2>
                            <div class="page_link">
                                <a href="index.html">Home</a>
                                <a href="elements.html">All Course</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <br><br>

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">

                    <div class="row">
                        {% for livre in Livres %}

                            <div class="col-lg-6">

                                <div class="d-block d-md-flex listing vertical">
                                    <a class="img d-block" href="{{ path('cours-detail', {'id': livre.id}) }}"><img src="{{ asset('uploads/images/livres/' ~ livre.image) }}" style="width: 100%;height: 215px;border-radius: 10px;"/></a>
                                    <div class="lh-content">
                                        <span class="category">Category :{{ livre.categorys.title }}
                                        </span>
                                        <a class="bookmark" href="#">
                                            <span class="icon-heart"></span>
                                        </a>
                                        <h3>
                                            <a href="#">{{ livre.titre }}</a>
                                        </h3>
                                        <address>{{ livre.description | slice(0, 50) ~ '...' }}</address>
                                        <p class="mb-0">
                                            <span class="review">
                                                <a class="btn btn-primary" href="{{ path('cours-detail',{'id': livre.id}) }}">Read More</a>
                                            </span>
                                        </p>
                                    </p>
                                </div>
                            </div>

                        </div>
                    {% endfor %}
                </div>

                <div class="col-12 mt-5 text-center">
                    <div class="custom-pagination">
                        <span>1</span>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <span class="more-page">...</span>
                        <a href="#">10</a>
                    </div>
                </div>

            </div>
            <div class="col-lg-3 ml-auto">

                <div class="mb-5">
                    <h3 class="h5 text-black mb-3">Filters</h3>
                    <form action="#" method="post">
                        <div class="form-group">
                            <input class="form-control" placeholder="What are you looking for?" type="text">
                        </div>
                        <div class="form-group">
                            <div class="select-wrap">
                                <span class="icon">
                                    <span class="icon-keyboard_arrow_down"></span>
                                </span>
                                <select class="form-control" id="" name="">
                                    <option value="">All Categories</option>
                                    <option selected="" value="">Real Estate</option>
                                    <option value="">Books &amp;  Magazines</option>
                                    <option value="">Furniture</option>
                                    <option value="">Electronics</option>
                                    <option value="">Cars &amp; Vehicles</option>
                                    <option value="">Others</option>
                                </select>
                            </div>
                        </div>
                        <div
                            class="form-group">
                            <!-- select-wrap, .wrap-icon -->
                            <div class="wrap-icon">
                                <span class="icon icon-room"></span>
                                <input class="form-control" placeholder="Location" type="text">
                            </div>
                        </div>
                    </form>
                </div>

                <div class="mb-5">
                    <form action="#" method="post">
                        <div class="form-group">
                            <p>Radius around selected destination</p>
                        </div>
                        <div class="form-group">
                            <input data-rangeslider="" max="100" min="0" style="position: absolute; width: 1px; height: 1px; overflow: hidden; opacity: 0;" type="range" value="20"><div class="rangeslider rangeslider--horizontal" id="js-rangeslider-0">
                                <div class="rangeslider__fill" style="width: 182.93px;"></div>
                                <div class="rangeslider__handle" style="left: 175.93px;"></div>
                            </div>
                            <div class="range-output">73</div>
                        </div>
                    </form>
                </div>

                <div class="mb-5">
                    <form action="#" method="post">
                        <div class="form-group">
                            <p>Category 'Real Estate' is selected</p>
                            <p>More filters</p>
                        </div>
                        <div class="form-group">
                            <ul class="list-unstyled">
                                <li>
                                    <label for="option1">
                                        <input id="option1" type="checkbox">
                                        Residential
                                    </label>
                                </li>
                                <li>
                                    <label for="option2">
                                        <input id="option2" type="checkbox">
                                        Commercial
                                    </label>
                                </li>
                                <li>
                                    <label for="option3">
                                        <input id="option3" type="checkbox">
                                        Industrial
                                    </label>
                                </li>
                                <li>
                                    <label for="option4">
                                        <input id="option4" type="checkbox">
                                        Land
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </form>
                </div>

                <div class="mb-5">
                    <h3 class="h6 mb-3">More Info</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Deleniti voluptatem placeat facilis, reprehenderit eius officiis.</p>
                </div>

            </div>

        </div>
    </div>
</div>

{% include "footer.html.twig" %}{% endblock %}
