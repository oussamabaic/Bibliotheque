</div></div></section><!--================End Home Banner Area =================--><!--================ Start Course Details Area =================--><section class="course_details_area section_gap"><div class="container">
<div class="row">
    <div class="col-lg-8 course_details_left">
        <div class="main_image">
            <h1>{{ Livre.titre }}</h1>
            <br>
            <a href="{{ asset('uploads/images/livres/' ~ Livre.image ) }}"><img alt="" src=" {{ asset('uploads/images/livres/' ~ Livre.image ) }} " style="width:600px;height:430px;"></a><br>
            <small>{{ Livre.createdAt | date('d/m/y') }}
                a
                {{ Livre.createdAt | date('H:i') }}
            </small><br>
            <br>
            <a href="{{ path('post_like' , {'id' : Livre.id}) }}" class="btn btn-link js-like" style="text-decoration: none;">

                {% if app.user and Livre.isLikedByUser(app.user) %}
                    <i class="fas fa-heart" style="color:red;font-size:25px;"></i>
                    <span class="js-label" style="color:black">
                        <b style="color:black;font-size:25px;">Follow</b>
                    </span>

                {% else %}
                    <i class="far fa-heart"></i>
                {% endif %}
                <span class="js-likes" style="color:black;font-size:25px;">{{ Livre.likes | length }}</span>
            </a>
        </div>
        <br>
        <div class="content_wrapper">
            <h5 class="title">Details
            </h5>
            <div class="content">
                {{ Livre.description | raw}}<br>
                <br>
                <div class="content">
                    Ecrit le
                    {{ Livre.createdAt | date('d/m/y') }}
                    a
                    {{ Livre.createdAt | date('H:i') }}
                </div>
                <br>
                <center>
                    <a href="{{ Livre.lienPDF }}">
                        <img alt="" src=" {{ asset('/img/Downloadlivre.png') }} " style="height:80px"></a>
                </center>
            </div>


        </div>
    </div>
    <div class="col-lg-4 right-contents">
        <h4 class="title">Reviews</h4>
        <div class="content">
            <div class="review-top row pt-40">
                <div class="col-lg-12">
                    <h6 class="mb-15">Provide Your Rating</h6>
                    <div class="d-flex flex-row reviews justify-content-between">
                        <span>Category :
                        </span>
                        <div class="star" style="width: 50%;">
                            <h5>{{ Livre.categorys.title }}</h5><br>
                        </div>
                    </div>
                    <div class="d-flex flex-row reviews justify-content-between">
                        <span>Le Narrateur :</span>
                        <div class="star" style="width: 50%;">
                            <h5 class="lien">{{ Livre.narrateur }}</h5><br>
                        </div>
                    </div>
                    <div class="d-flex flex-row reviews justify-content-between">
                        <span style="width: 40%;">Nombre de page :</span>
                        <div class="star" style="width: 50%;">
                            <h5 class="lien">{{Livre.nbrpage}}</h5>
                        </br>
                    </div>
                </div>
            </div>
        </div>
        {% if not app.user %}
        {% else %}
            <div class="feedeback">
                <h6>Your Feedback</h6>
                {{ form_start(commentForm) }}

                {{ form_row(commentForm.author , {'attr': {'value': app.user }}
                )}}
                {{ form_row(commentForm.content, { 'attr':{'placeholder': "Commentaire..."} })}}

                <div class="mt-10 text-right">
                    <button class="primary-btn2 text-right rounded-0 text-yellow-50" type="Submit">Submit</button>
                </div>
                {{ form_end(commentForm) }}

                <br><br>
            </div>
        {% endif %}
        <div class="comment-list">
            <h4>{{ Livre.comments | length }}
                Commentaires</h4>
            <br>
            <div class="single-comment single-reviews justify-content-between d-flex">
                <div class="user justify-content-between d-flex">
                    <div class="thumb"></div>
                    <div class="desc">
                        {% for comment in Livre.comments %}
                            <h5>
                                <a href="#">
                                    {{ comment.author }}<small>
                                        {{ comment.createdAt | date('d/m.Y a H:i')}}</small>
                                </a>
                            </h5>
                            <p>
                                {{ comment.content | raw }}
                            </p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div></div></div></div></section>{% endblock %}{% block javascripts %}<script src="https://unpkg.com/axios/dist/axios.min.js"></script><script>function onClickBtnLike(event) {
    event.preventDefault();


    const url = this.href;

    const spanCount = this.querySelector('span.js-likes');

    const icone = this.querySelector('i');

    axios.get(url).then(function (response) {
        spanCount.textContent = response.data.likes;

        if (icone.classList.contains('fas')) {
            icone.classList.replace('fas', 'far');
        } else {
            icone.classList.replace('far', 'fas');
        }
    }).catch(function (error) {
        if (error.response.status === 403) {
            window.alert("Vous ne pouvez pas liker Cette Livre Vous N'etes pas Conneter")
        } else {
            window.alert('Reessayez');
        }
    });
}

document.querySelectorAll('a.js-like').forEach(function (link) {
    link.addEventListener('click', onClickBtnLike)
})</script>{% endblock %}
