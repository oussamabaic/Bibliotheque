{% extends 'baseCommande.html.twig' %}


{% block title %}New Commande
{% endblock %}

{% block body %}
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="overlay"></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="banner_content text-center">
                            <h2>New Commande</h2>
                            <div class="page_link">
                                <a href="index.html">Home</a>
                                <a href="commande/new.html.twig">New Commande</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>

    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img alt="" src="https://image.ibb.co/n7oTvU/logo_white.png"/>
                <h3>Commander</h3>
                <p>You are 30 seconds away from earning your own money!</p>
            </div>
            <div class="col-md-9 register-right">
                <div class="tab-content" id="myTabContent" style="margin-top: -42px;">
                    {{ form_start(form) }}
                    <div aria-labelledby="profile-tab" class="tab-pane fade show" id="profile" role="tabpanel">
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.user, {'attr': {'value': app.user }}
                                    )}}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.created_At) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.Livraison) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <button class="btnRegister">{{ button_label|default('Register') }}</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
    <br>
{% endblock %}
